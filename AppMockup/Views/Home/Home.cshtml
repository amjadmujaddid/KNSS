
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #divProgress {
        position: relative;
        width: 100%;
        height: 30px;
        background-color: #ddd;
    }

    #divBar {
        position: absolute;
        width: 10%;
        height: 100%;
        background-color: #4CAF50;
    }

    #label {
        text-align: center;
        line-height: 30px;
        color: white;
    }
</style>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header">
                    <div class="col-lg-6">
                        <select class="form-control" id="cboGroup"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
   @*<input type="button" value="Test" onclick="showProgress()" />*@
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header">
                    <div id="divProgress">
                        <div id="divBar">
                            <div id="label">0%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="btn-group">
                                <button id="btnAdd" class="btn btn-default btn-md"> Add</button>
                                <button id="btnDelete" class="btn btn-default btn-md">Delete</button>
                                <button id="btnUpdate" class="btn btn-default btn-md">Update</button>
                                <button id="btnReturn" class="btn btn-default btn-md">Return</button>
                                <button id="btnExcel" class="btn btn-default btn-md">Export to Excel</button>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="col-lg-5 pull-right">
                                <div class="input-group">
                                    <input type="text" placeholder="Search by Id" id="txtSearchGroup" class="form-control" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn" id="btnSearch"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered table-fill" id="grdGroup"></table>
                <div id="ctrlGrdGroup"></div>
            </div>
        </div>
    </div>
</section>
